        <RadioButton x:Name="rbtMonth" Content="月間バックアップ" HorizontalAlignment="Left" Margin="65,271,0,0" VerticalAlignment="Top" ToolTip="毎月１～３１"/>

        <Button x:Name="btnCreate" Content="作成" HorizontalAlignment="Left" Margin="281,347,0,0" VerticalAlignment="Top" Width="75" Click="btnCreate_Click"/>
        <Button x:Name="btnReadme" Content="?" HorizontalAlignment="Left" Margin="586,12,0,0" VerticalAlignment="Top" Width="25" FontSize="14" Click="btnReadme_Click"/>
    </Grid>
</Window>
